@model IEnumerable<IMS.Models.Department>
@{
    ViewBag.Title = "Home Page";
}

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Department Name</th>
        </tr>
    </thead>
    <tbody>
        @if (!Model.Any())
        {


            <tr>
                <td colspan="2">No Data Found.....</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>@item.DepartmentId</td>
                    <td>@item.DepartmentName</td>
                </tr>
            }
        }

    </tbody>
</table>