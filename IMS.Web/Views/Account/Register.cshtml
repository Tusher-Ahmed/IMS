@model IMS.Web.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<main aria-labelledby="title">
    <div class="row">
        <div class="col-6">
            <h4 class="text-uppercase">Create a new account</h4>
        </div>
        <div class="col-6 text-end">
            @Html.ActionLink("Register as a Germents", "GRegister", "Account", new { @class = "btn btn-outline-secondary" })
        </div>
    </div>

    <br/>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { role = "form" }))
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary("", new { @class = "text-danger" })
<div class="row">
    @*<div class="col-md-12 pb-2">
        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Enter your username" })
    </div>*@
    <div class="col-md-12 pb-2">
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Enter your email" })
    </div>
    <div class="col-md-6 pb-2">
        @Html.TextBoxFor(m => m.ShopName, new { @class = "form-control", placeholder = "Enter your shop name" })
    </div>
    <div class="col-md-6 pb-2">
        @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control", placeholder = "Enter your phone number" })
    </div>
    <div class="col-md-6 pb-2">
        @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
    </div>
    <div class="col-md-6 pb-2">
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Confirm password" })
    </div>
    <div class="col-md-6 pb-2">
        @Html.TextBoxFor(m => m.City, new { @class = "form-control", placeholder = "City", required = "required" })
    </div>
    <div class="col-md-6 pb-2">
        @Html.TextBoxFor(m => m.StreetAddress, new { @class = "form-control", placeholder = "Street address", required = "required" })
    </div>
    <div class="col-md-6 pb-2">
        @Html.TextBoxFor(m => m.Thana, new { @class = "form-control", placeholder = "Thana" })
    </div>
    <div class="col-md-6 pb-2">
        @Html.TextBoxFor(m => m.PostalCode, new { @class = "form-control", placeholder = "Postal code" })
    </div>
</div>
<div class="row">
    <div class="text-center p-2">
        <input type="submit" value="CREATE ACCOUNT" class="btn btn-success" style="width:100%" />
        @if (User.IsInRole("Admin") == false)
        {
            <div class="d-block pt-4">
                <span class="pt-4 mt-1">Already Registered?</span>
                @Html.ActionLink("Login", "Login", "Account", new { @class = "btn pt-1 text-primary" })
            </div>
        }

    </div>
        </div>
    }
</main>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
