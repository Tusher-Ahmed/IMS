@model IMS.Models.Department

@{
    ViewBag.Title = "Create";
}

<h2 class="text-uppercase">Create Department</h2>
<div id="DivDept">
</div>
@using (Ajax.BeginForm("Create", "Department", new AjaxOptions()
{
    HttpMethod = "POST",
    UpdateTargetId = "DivDept",
    OnComplete = "ClearFields"
}))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <br />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.DepartmentName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.DepartmentName, new { htmlAttributes = new { @class = "form-control", id = "dName" } })
                @Html.ValidationMessageFor(model => model.DepartmentName, "", new { @class = "text-danger" })
            </div>
        </div>
        <br />
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="pl-2 pr-2 btn btn-outline-success" />
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-outline-info" })
            </div>
        </div>
    </div>
}




@section Scripts {
    <script>
        var messageTimer;

        function updateDivDept(data) {
            var divElement = document.getElementById("DivDept");
            if (data && data.message) {
                divElement.innerHTML = data.message;
                divElement.classList.add("message");
                // Clear the message after 3 seconds
                messageTimer = setTimeout(function () {
                    divElement.innerHTML = '';
                }, 3000);
            }
        }

        // AJAX form submission complete callback
        function ClearFields(ajaxContext) {
            updateDivDept(ajaxContext.responseJSON);
            document.getElementById("dName").value = "";

        }
    </script>

    @Scripts.Render("~/bundles/jqueryval")
}
