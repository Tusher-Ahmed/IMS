@model IEnumerable<IMS.Models.ProductType>

@{
    ViewBag.Title = "Index";
}

<div class="row pb-4 pt-2">
    <div class="col-md-4">
        <h2 class="text-uppercase">Product Types</h2>
    </div>
    <div class="col-md-8 text-end">
        <a href="@Url.Action("Create","ProductType",null)" class="btn btn-outline-primary"><i class='fas fa-plus'></i> Add New</a>
        <a href="@Url.Action("Deactivate","ProductType",null)" class="btn btn-outline-danger"> <i class="fas fa-times"></i> Deactivated Types</a>
        <a href="@Url.Action("Index", "Home", new {area="Admin"})" class="btn btn-outline-success"><i class="fa-solid fa-square-caret-left"></i>&nbsp; Back to Dashboard </a>
    </div>
</div>
@using (Ajax.BeginForm("Index", "ProductType", new AjaxOptions()
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.Replace,
    UpdateTargetId = "DivProductType"
}))
{
    <div class="row mb-2 pt-4">
        <div class="col-10">
            <input type="text" name="pType" class="form-control" />
        </div>
        <div class="col-2">
            <button type="submit" class="form-control btn btn-outline-primary"><i class="fas fa-search"></i> Search</button>
        </div>
    </div>

}
<div id="DivProductType">
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
        @if (!Model.Any())
        {


            <tr>
                <td colspan="2">No Data Found.....</td>
            </tr>
        }
        else
        {
            foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td class="text-end">
                        <a href="@Url.Action("Edit", "ProductType", new { id = item.Id })" class="btn btn-outline-primary">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Status", "ProductType", new { id = item.Id })" class="btn btn-outline-success">
                            <i class="fas fa-check-circle"></i>
                        </a>                      
                    </td>
                </tr>
            }
        }

    </table>
</div>

