@model List<IMS.Models.ViewModel.UserDetailViewModel>

@{
    ViewBag.Title = "Employee Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pb-4 pt-2">
    <div class="col-md-6">
        <h4 class="text-uppercase">Shop List</h4>
    </div>
    <div class="col-md-6 text-end">
        <a href="@Url.Action("Register", "Account", new {area=""})" class="btn btn-outline-success"><i class='fas fa-plus'></i> Add Shop</a>        
        <a href="@Url.Action("DeactivatedCustomerList", "Home", new {area="Admin"})" class="btn btn-outline-danger"><i class="fa-solid fa-right-from-bracket"></i> Deactivated Customers</a>
    </div>
</div>

<table id="shopTable" class="table table-hover table-striped">
    <thead>
        <tr>
            <th>User Id</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Shopname</th>
            <th>City</th>
            <th>Street Address</th>
            <th>Thana</th>
            <th>Postal Code</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.ShopName</td>
                <td>@item.City</td>
                <td>@item.StreetAddress</td>
                <td>@item.Thana</td>
                <td>@item.PostalCode</td>
                <td>
                    <a href="@Url.Action("DeactivateCustomer", "Home", new { id = item.Id ,area="Admin" })" class="btn btn-outline-danger">
                        <i class="fas fa-xmark"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    <script>$(document).ready(function () {
            $("#shopTable").DataTable();
        })</script>
}

