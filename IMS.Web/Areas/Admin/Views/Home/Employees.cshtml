@model List<IMS.Models.ViewModel.UserDetailViewModel>
@{
    ViewBag.Title = "Deactivate Employees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row pb-4 pt-2">
    <div class="col-md-4">
        <h4 class="text-uppercase">Employee List</h4>
    </div>
    <div class="col-8 text-end">
        <a href="@Url.Action("ERegister", "Account", new {area=""})" class="btn btn-outline-success pb-2"><i class='fas fa-plus'></i> Create Employee</a>       
        <a href="@Url.Action("DeactivatedEmployeeList", "Home", new {area="Admin"})" class="btn btn-outline-danger pb-2"><i class="fa-solid fa-right-from-bracket"></i> Decativated Employees</a>       
        <a href="@Url.Action("Index", "Home", new {area="Admin"})" class="btn btn-outline-success pb-2"><i class="fa-solid fa-square-caret-left"></i>&nbsp; Back to Dashboard </a>
    </div>
</div>
<table id="DemployeeTable" class="table table-hover table-striped">
    <thead>
        <tr>
            <th>No.</th>
            <th>Email</th>
            <th>Phone</th>
            <th>Role</th>
            <th>City</th>
            <th>Street Address</th>
            <th>Thana</th>
            <th>Postal Code</th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
        @{ int i = 1;}
        @foreach (var item in Model)
        {
            <tr>
                <td>@i</td>
                <td>@item.Email</td>
                <td>@item.Phone</td>
                <td>@item.ERole</td>
                <td>@item.City</td>
                <td>@item.StreetAddress</td>
                <td>@item.Thana</td>
                <td>@item.PostalCode</td>
                <td>
                    <a href="@Url.Action("DeactivateEmployee", "Home", new { id = item.Id ,area="Admin" })" class="btn btn-outline-danger">
                        <i class="fas fa-xmark"></i>
                    </a>
                </td>
            </tr>
            i++;
        }
    </tbody>
</table>

@section Scripts {
    <script>
$(document).ready(function () {
    $("#DemployeeTable").DataTable({
        "columnDefs": [
            { "orderable": false, "targets": [8] },
            { "orderable": true, "targets": [0, 1, 2, 3, 4, 5, 6, 7] }
        ]
    });
        })</script>
}

